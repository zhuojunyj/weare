<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp" 
    android:layout_marginTop="0dp"
    android:background="@color/bak_color">

    <!-- 返回按钮 -->
    <Button
        android:id="@+id/backBtn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/common_back"
        android:layout_alignParentLeft="true"/>

    <!-- 标题 -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignBaseline="@+id/backBtn"
        android:layout_alignBottom="@+id/backBtn"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:textColor="#333333"/>
	<!-- 右按扭 -->
    <Button
        android:id="@+id/rightNavBtn"
        android:layout_width="48dp"
        android:layout_height="32dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="13dp"
        android:textSize="14sp"
        android:textColor="@color/text_color"
        android:background="@drawable/login_wrap"
        android:visibility="gone"/>
    
    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/borderColor"
        android:layout_alignParentBottom="true" />



</RelativeLayout>
