<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="#f9f9f9">

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/adv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/test_pic" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="54dp" >

                <EditText
                    android:id="@+id/search"
                    android:layout_width="290dp"
                    android:layout_height="32dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="9dp"
                    android:background="@drawable/login_wrap"
                    android:drawableLeft="@drawable/search_icon"
                    android:textColor="@color/text_color_even_light"
                    android:textSize="16sp"
                    android:ems="10" >

                </EditText>

                <Button
                    android:id="@+id/go_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/search"
                    android:layout_marginLeft="2dp"
                    android:background="@null"
                    android:textColor="@color/blue"
                    android:textSize="20sp"
                    android:text="@string/search_go" />
            </RelativeLayout>
            
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:paddingLeft="1dp"
                android:paddingTop="2dp"
                android:paddingRight="1dp"
                android:paddingBottom="5dp"
                android:background="@drawable/bg">

               <!--  <View
                    android:id="@+id/view1"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentTop="true"
                    android:background="#dfdfdf"/> -->

                <RelativeLayout
                    android:id="@+id/view2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentTop="true">
                    
                    <Button
                        android:id="@+id/hot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/search_tab_s"
                        android:textColor="@color/btn_color_red"
                        android:textSize="16sp"
                        android:text="@string/search_hot" />

                    <Button
                        android:id="@+id/history"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/hot"
                        android:background="@drawable/search_tab"
                        android:textColor="@color/text_color_light"
                        android:textSize="16sp"
                        android:text="@string/search_history" />

                    <Button
                        android:id="@+id/recent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/search_tab"
                        android:textColor="@color/text_color_light"
                        android:textSize="16sp"
                        android:text="@string/search_recent" />

                    <View
                        android:id="@+id/view3"
                        android:layout_width="1dp"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/hot" 
                        android:background="#dfdfdf"/>

                    <View
                        android:id="@+id/view4"
                        android:layout_width="1dp"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/history" 
                        android:background="#dfdfdf"/>
                 </RelativeLayout>
                 
                 <FrameLayout
                     android:id="@+id/replace"
                     android:layout_width="match_parent"
                     android:layout_height="270dp"
                     android:layout_below="@+id/view2">
                 </FrameLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
